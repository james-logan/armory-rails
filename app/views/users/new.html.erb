<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>
<%= render 'shared/error_messages' %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirm, 'Confirmation' %>
  <%= f.password_field :password_confirm %>

  <%= f.submit 'Create Account', class: 'btn btn-primary' %>

<% end %>
